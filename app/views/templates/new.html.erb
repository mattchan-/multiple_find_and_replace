<% provide(:title, 'Add Template') %>

<div class = "row">
  <div class="col-lg-6 col-lg-offset-3">
    <h1>Add Template</h1>
    <hr>
    <%= form_for @template do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :content %>
      <%= f.text_area :content, rows: 10 %>

      <%= f.submit "Add Template", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>